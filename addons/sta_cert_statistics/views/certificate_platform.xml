<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="view_certificate_platform_form" model="ir.ui.view">
            <field name="name">certificate.platform.form</field>
            <field name="model">certificate.platform</field>
            <field name="arch" type="xml">
                <form string="Platform">
                    <group>
                        <field name="name"/>
                        <field name="remark" />
                    </group>
                </form>
            </field>
        </record>

        <record id="view_certificate_platform_tree" model="ir.ui.view">
            <field name="name">certificate.platform.tree</field>
            <field name="model">certificate.platform</field>
            <field name="arch" type="xml">
                <tree string="Company Platform">
                        <field name="name"/>
                        <field name="remark" />
                </tree>
            </field>
        </record>
    </data>
</odoo>