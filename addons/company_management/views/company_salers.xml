<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_company_salers_form" model="ir.ui.view">
            <field name="name">company.salers.form</field>
            <field name="model">company.salers</field>
            <field name="arch" type="xml">
                <form string="Salers">
                    <group>
                        <field name="name"/>
                        <field name="remark" />
                    </group>
                </form>
            </field>
        </record>

        <record id="view_company_salers_tree" model="ir.ui.view">
            <field name="name">company.salers.tree</field>
            <field name="model">company.salers</field>
            <field name="arch" type="xml">
                <tree string="Company Salers">
                        <field name="name"/>
                        <field name="remark" />
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="company_salers_action">
            <field name="name">Company Salers</field>
            <field name="res_model">company.salers</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
  