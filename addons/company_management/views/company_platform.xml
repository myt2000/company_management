<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="view_company_platform_form" model="ir.ui.view">
            <field name="name">company.platform.form</field>
            <field name="model">company.platform</field>
            <field name="arch" type="xml">
                <form string="Platform">
                    <group>
                        <field name="name"/>
                        <field name="remark" />
                    </group>
                </form>
            </field>
        </record>

        <record id="view_company_platform_tree" model="ir.ui.view">
            <field name="name">company.platform.tree</field>
            <field name="model">company.platform</field>
            <field name="arch" type="xml">
                <tree string="Company Platform">
                        <field name="name"/>
                        <field name="remark" />
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="company_platform_action">
            <field name="name">Company Platform</field>
            <field name="res_model">company.platform</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
  